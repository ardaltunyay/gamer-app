<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Light application theme. -->
    <style name="AppTheme.Light">
        <item name="android:windowBackground">@color/white</item>
        <item name="backgroundColorPrimary">@color/white</item>
        <item name="backgroundColorSecondary">@color/white_smoke</item>
        <item name="textColorPrimary">@color/nero</item>
    </style>

    <!-- Light application theme. -->
    <style name="AppTheme.Dark">
        <item name="android:windowBackground">@color/nero</item>
        <item name="backgroundColorPrimary">@color/nero</item>
        <item name="backgroundColorSecondary">@color/charcoal</item>
        <item name="textColorPrimary">@color/white_smoke</item>
    </style>

    <!-- AppTextAppearance, AppShapeAppearance etc. -->
    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Animations -->
    <style name="AppWindowAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>
